update() {
	sudo apt-get update && sudo apt-get upgrade -y
}

pprint (){
    printf """$cpurple $1"""
}

packages(){
	sudo apt-get install python3-pip && apt-get install ffmpeg -y
}

node(){
	curl -fssL https://deb.nodesource.com/setup_17.x | sudo -E bash - && sudo apt-get install nodejs -y && npm i -g npm
}

repo(){
	git clone https://github.com/Ergans33/Iniadalahbot &&  cd Iniadalahbot
}

installation(){
	pip3 install -U -r requirements.txt
}


